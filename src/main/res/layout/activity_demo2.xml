                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="School Moto "
                            android:textSize="15dp"
                            />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <!--School Logo-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">


                    <android.support.design.button.MaterialButton
                        android:id="@+id/upload_school_logo_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload School Logo"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"
                        android:textSize="15dp"
                        android:background="@drawable/btn_design"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_marginRight="30dp"/>

                    <ImageView
                        android:id="@+id/school_logo_signup"
                        android:layout_marginTop="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/ic_file_upload"
                        android:backgroundTint="@android:color/white"/>


                </LinearLayout>

                <!-- Field 4-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_school_search"
                        android:backgroundTint="@android:color/white"/>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        >

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/affilated_by_signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Affilated By*  "
                            android:textSize="15dp"
                            />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <!-- Field 5-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_track_progress"
                        android:backgroundTint="@android:color/white"/>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        >

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/doe_signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Date Of Establishment "
                            android:textSize="15dp"
                            />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/contact_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="> Contact Information"
                android:background="@drawable/ic_expandable"
                android:textSize="24dp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="30dp"
                android:paddingBottom="10dp"
                android:textStyle="italic"
                android:textColor="@android:color/white"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="10dp"
                />


            <!--contact_information-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/contact_information_1"
                android:visibility="gone"
                >


                <!-- Field 1-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_email"
                        android:backgroundTint="@android:color/white"/>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        >

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/email_id_signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email ID* "

                            android:textSize="15dp"
                            />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <!-- Field 2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_smartphone"
                        android:backgroundTint="@android:color/white"/>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        >

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/mobile_number_signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mobile Number* "

                            android:textSize="15dp"
                            />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <!-- Field 3-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_lock"
                        android:backgroundTint="@android:color/white"/>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@android:color/white"
                        android:theme="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        >

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/password_signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password* "
                            android:textSize="15dp"
                            />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <!-- Field 4-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_website"
                        android:backgroundTint="@android:color/white"/>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        >

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/website_signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Website  "

                            android:textSize="15dp"
                            />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <!-- Field 5-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_phone"
                        android:backgroundTint="@android:color/white"/>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        >

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/phone_number_signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Phone Number "
                            android:textSize="15dp"
                            />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

            </LinearLayout>




            <TextView
                android:id="@+id/address_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="> Address Information"
                android:background="@drawable/ic_expandable"
                android:textSize="24dp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="30dp"
                android:paddingBottom="10dp"
                android:textStyle="italic"
                android:textColor="@android:color/white"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="10dp"
                />



            <!--address_information-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/address_information_1"
                android:visibility="gone"
                >


                <!-- Field 1-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_toc"
                        android:backgroundTint="@android:color/white"/>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        >

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/state_signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="State* "
                            android:textSize="15dp"
                            />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <!-- Field 2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_toc"
                        android:backgroundTint="@android:color/white"/>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        >

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/district_signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="District* "
                            android:textSize="15dp"
                            />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <!-- Field 3-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_toc"
                        android:backgroundTint="@android:color/white"/>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        >

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/city_signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="City* "
                            android:textSize="15dp"
                            />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <!-- Field 4-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_toc"
                        android:backgroundTint="@android:color/white"/>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        >

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/address_signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Address  "
                            android:textSize="15dp"
                            />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <!-- Field 5-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_toc"
                        android:backgroundTint="@android:color/white"/>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout.TextLabel"
                        >

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/pincode_signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Pin Code* "
                            android:textSize="15dp"
                            />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>


                <android.support.v7.widget.AppCompatButton
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_design"
                    android:text="SignIn"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@string/font_family_regular"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@android:color/white"/>

            </LinearLayout>



        </LinearLayout>



    </RelativeLayout>





</ScrollView>