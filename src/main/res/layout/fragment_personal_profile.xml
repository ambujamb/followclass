<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    tools:context=".fragments.personal_profile"
    android:orientation="vertical">



            <TextView
                android:layout_width="121dp"
                android:layout_height="48dp"
                android:paddingTop="10dp"
                android:text="Welcome"
                android:textStyle="bold"
                android:textSize="25dp"
                android:fontFamily="@string/font_family_condensed"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorPrimaryDark"
                />


        <!--Name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="Name :"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@string/font_family_regular"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/personal_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ambuj Mishra"
                android:textSize="20dp"
                android:textStyle="normal"
                android:fontFamily="@string/font_family_light"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

        <!--Email id-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="Email ID :"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@string/font_family_regular"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/personal_profile_email_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ambuj Mishra"
                android:textSize="20dp"
                android:textStyle="normal"
                android:fontFamily="@string/font_family_light"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

        <!--MObile Number-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="Ph. Number :"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@string/font_family_regular"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/personal_profile_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ambuj Mishra"
                android:textSize="20dp"
                android:textStyle="normal"
                android:fontFamily="@string/font_family_light"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

        <!--Role-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="Role :"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@string/font_family_regular"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/personal_profile_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ambuj Mishra"
                android:textSize="20dp"
                android:textStyle="normal"
                android:fontFamily="@string/font_family_light"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>




    </LinearLayout>
